<Window x:Class="Municiplical_Service.RequestStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Municiplical_Service"
        mc:Ignorable="d"
        Title="RequestStatusWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgServiceRequests" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding RequestID}" Width="50"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="150"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="250"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Date Reported" Binding="{Binding DateReported}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
